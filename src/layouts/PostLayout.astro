---
import Layout from "./Layout.astro";
const { title, date, image, excerpt } = Astro.props;
---

<Layout title={title} description={excerpt || title} image={image}>
    <article class="pt-32 pb-24">
        <div class="container mx-auto px-4 max-w-4xl">
            <div class="mb-12 text-left">
                <img
                    src={image}
                    alt={title}
                    class="w-full h-[400px] md:h-[500px] object-cover rounded-3xl shadow-2xl mb-12"
                />
                <div class="flex items-center gap-4 mb-6">
                    <span
                        class="bg-[#339966] text-white px-4 py-1 rounded-full text-sm font-bold uppercase tracking-wider"
                        >{date}</span
                    >
                </div>
                <h1
                    class="text-4xl md:text-6xl font-black text-gray-900 leading-tight mb-8"
                >
                    {title}
                </h1>
            </div>

            <div
                class="blog-content text-xl text-gray-700 leading-relaxed text-left"
            >
                <slot />
            </div>

            <div
                class="mt-20 pt-10 border-t border-gray-100 flex flex-col md:flex-row items-center justify-between gap-8"
            >
                <div class="text-left">
                    <h4 class="text-2xl font-bold text-gray-900 mb-2">
                        Ti piace questo articolo?
                    </h4>
                    <p class="text-gray-600">
                        Condividilo con i tuoi amici o richiedi una consulenza
                        gratuita.
                    </p>
                </div>
                <a
                    href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/#contatti`}
                    class="bg-[#339966] text-white px-10 py-5 rounded-full font-black text-lg hover:scale-105 transition-transform shadow-lg shadow-green-900/20"
                >
                    Richiedi una Consulenza
                </a>
            </div>

            <div class="mt-12 text-center">
                <a
                    href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/#blog`}
                    class="text-[#339966] font-bold hover:underline flex items-center justify-center gap-2"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                            clip-rule="evenodd"></path>
                    </svg>
                    Torna al Blog
                </a>
            </div>
        </div>
    </article>
</Layout>

<style is:global>
    .blog-content p {
        margin-bottom: 1.5rem;
    }
    .blog-content strong {
        color: #111827;
    }
</style>
