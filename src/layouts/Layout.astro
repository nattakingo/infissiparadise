---
import "../styles/global.css";
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
const {
  title = "Infissi Paradise - Qualit√† che Dura",
  description = "Infissi Paradise: soluzioni su misura per infissi in PVC, alluminio, grate di sicurezza, zanzariere, tende da sole e porte blindate",
  image = "/social-image.jpg",
} = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/favicon.svg`}
    />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-['Jost'] text-[#111827] bg-white">
    <!-- Navigation -->
    <header class="fixed top-0 w-full z-50 transition-all duration-300">
      <nav class="container mx-auto px-4 py-2">
        <div class="flex justify-between items-center">
          <a
            href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/`}
            class="block w-28"
          >
            <Image
              src={logo}
              alt="Infissi Paradise"
              class="h-auto w-full object-contain"
              loading="eager"
              fetchpriority="high"
              decoding="async"
            />
          </a>
          <div class="hidden md:flex space-x-6">
            <a
              href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/#chi-siamo`}
              class="hover:text-[#339966] transition-colors">Chi Siamo</a
            >
            <a
              href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/#prodotti`}
              class="hover:text-[#339966] transition-colors">Prodotti</a
            >
            <a
              href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/#galleria`}
              class="hover:text-[#339966] transition-colors">Galleria</a
            >
            <a
              href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/#blog`}
              class="hover:text-[#339966] transition-colors">Blog</a
            >
            <a
              href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/#ecobonus`}
              class="hover:text-[#339966] transition-colors">Ecobonus</a
            >
            <a
              href={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/#contatti`}
              class="hover:text-[#339966] transition-colors">Contatti</a
            >
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="relative z-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-[#111827] text-white py-8">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; 2025 Infissi Paradise. Tutti i diritti riservati.</p>
        <div class="mt-4">
          <a
            href="https://www.instagram.com/infissiparadise/?hl=en"
            target="_blank"
            class="text-white hover:text-[#339966] transition-colors"
          >
            Seguici su Instagram
          </a>
        </div>
      </div>
    </footer>

    <!-- WhatsApp Button -->
    <a
      href="https://wa.me/393396992947"
      target="_blank"
      class="fixed bottom-6 right-6 z-50 bg-[#25D366] text-white p-4 rounded-full shadow-lg hover:scale-110 transition-transform duration-300 flex items-center justify-center group"
      aria-label="Contattaci su WhatsApp"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="32"
        height="32"
        fill="currentColor"
        class="bi bi-whatsapp"
        viewBox="0 0 16 16"
      >
        <path
          d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"
        ></path>
      </svg>
      <span
        class="absolute right-full mr-3 bg-white text-gray-800 px-3 py-1 rounded-lg shadow-md text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none"
      >
        Contattaci su WhatsApp
      </span>
    </a>

    <!-- JavaScript per animazioni -->
    <script>
      // Intersection Observer per fade-in animations
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("visible");
            }
          });
        },
        { threshold: 0.1 },
      );

      document.querySelectorAll(".fade-in").forEach((el) => {
        observer.observe(el);
      });

      // Header scroll effect
      const header = document.querySelector("header");
      const navLinks = document.querySelectorAll("header nav a");
      const logoContainer = document.querySelector("header a.block");

      function updateHeader() {
        if (!header) return;

        if (window.scrollY > 50) {
          header.classList.add(
            "bg-white/95",
            "backdrop-blur-sm",
            "shadow-sm",
            "text-[#111827]",
          );
          header.classList.remove("text-white", "bg-transparent");
          // Reset logo filter if applied
          if (logoContainer instanceof HTMLElement)
            logoContainer.style.filter = "none";
        } else {
          header.classList.remove(
            "bg-white/95",
            "backdrop-blur-sm",
            "shadow-sm",
            "text-[#111827]",
          );
          header.classList.add("text-white", "bg-transparent");
          // Make logo white (assuming it's dark text)
          if (logoContainer instanceof HTMLElement)
            logoContainer.style.filter = "brightness(0) invert(1)";
        }
      }

      window.addEventListener("scroll", updateHeader);
      // Initial check
      updateHeader();
    </script>
  </body>
</html>
