---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroBg from "../assets/hero-bg.jpg";
import teamImg from "../assets/team.jpg";
import pvcImg from "../assets/pvc.jpg";
import aluImg from "../assets/alu.jpg";
import grateImg from "../assets/grate.jpg";
import zanzariereImg from "../assets/zanzariere.jpg";
import tendeImg from "../assets/tende.jpg";
import porteImg from "../assets/porte.jpg";
import avvolgibiliImg from "../assets/avvolgibili.png";
import serratureImg from "../assets/serrature.png";
import mobiliAluImg from "../assets/mobili_alluminio.png";

// Gallery Imports
import gallery1 from "../assets/gallery-1.jpg";
import gallery2 from "../assets/gallery-2.jpg";
import gallery3 from "../assets/gallery-3.jpg";
import gallery4 from "../assets/gallery-4.jpg";
import gallery5 from "../assets/gallery-5.jpg";
import gallery6 from "../assets/gallery-6.jpg";
import gallery7 from "../assets/gallery-7.jpg";
import gallery8 from "../assets/gallery-8.jpg";
import gallery9 from "../assets/gallery-9.jpg";
import gallery10 from "../assets/gallery-10.jpg";
import gallery11 from "../assets/gallery-11.jpg";
import gallery12 from "../assets/gallery-12.jpg";

const galleryImages = [
  gallery1,
  gallery2,
  gallery3,
  gallery4,
  gallery5,
  gallery6,
  gallery7,
  gallery8,
  gallery9,
  gallery10,
  gallery11,
  gallery12,
];

// Partner Logos
import rehauBox from "../assets/partners/rehau.png";
import domalBox from "../assets/partners/domal.png";
import nurithBox from "../assets/partners/nurith.png";
import finstralBox from "../assets/partners/finstral.png";
import evvaBox from "../assets/partners/evva.png";
import motturaBox from "../assets/partners/mottura.png";
import tempotestBox from "../assets/partners/tempotest.png";
import geniusBox from "../assets/partners/genius.png";
---

<Layout>
  <!-- Hero Section -->
  <section
    class="relative h-screen flex items-center justify-center overflow-hidden"
  >
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <Image
        src={heroBg}
        alt="Infissi Paradise"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div
        class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/40 to-black/60"
      >
      </div>
    </div>

    <!-- Content -->
    <div
      class="relative z-10 text-center text-white px-4 fade-in max-w-6xl mx-auto"
    >
      <h1
        class="text-6xl md:text-8xl lg:text-9xl font-black mb-6 leading-tight text-shadow-hero"
      >
        Infissi Paradise
      </h1>
      <p class="text-2xl md:text-4xl lg:text-5xl font-light mb-8 text-gray-100">
        Porte e Finestre che arredano
      </p>
      <p
        class="text-lg md:text-xl lg:text-2xl mb-12 max-w-3xl mx-auto text-gray-200 leading-relaxed"
      >
        Soluzioni su misura per la tua casa
      </p>
      <a
        href="#prodotti"
        class="hero-button inline-block bg-[#DC2626] hover:bg-red-700 text-white px-12 py-6 rounded-full text-lg md:text-xl font-bold transition-all transform hover:scale-105"
      >
        Scopri i Nostri Prodotti
      </a>
    </div>
  </section>

  <!-- Sezione 2: Chi Siamo -->
  <section id="chi-siamo" class="relative z-10 py-24 bg-[#F9FAFB] fade-in">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12 text-[#DC2626]">
        Chi Siamo
      </h2>
      <div class="grid md:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
        <div>
          <h3 class="text-2xl font-semibold mb-4">
            Infissi Paradise: La Tua Sicurezza, La Nostra Passione
          </h3>
          <p class="text-[#374151] mb-6 leading-relaxed">
            Da oltre 20 anni, Infissi Paradise è il punto di riferimento per
            l'installazione di infissi di alta qualità nella tua zona.
            Specializzati in soluzioni su misura, offriamo prodotti che uniscono
            design, efficienza energetica e sicurezza.
          </p>
          <p class="text-[#374151] mb-8 leading-relaxed">
            Il nostro team di esperti ti accompagna in ogni fase: dalla scelta
            del prodotto perfetto alla posa professionale, garantendo risultati
            che durano nel tempo.
          </p>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="text-[#DC2626] text-3xl mb-2">✓</div>
              <h4 class="font-semibold mb-1">Installazione</h4>
              <p class="text-sm text-[#6B7280]">Professionale e garantita</p>
            </div>
            <div class="text-center">
              <div class="text-[#DC2626] text-3xl mb-2">✓</div>
              <h4 class="font-semibold mb-1">Assistenza</h4>
              <p class="text-sm text-[#6B7280]">Supporto post-vendita</p>
            </div>
            <div class="text-center">
              <div class="text-[#DC2626] text-3xl mb-2">✓</div>
              <h4 class="font-semibold mb-1">Sopralluoghi</h4>
              <p class="text-sm text-[#6B7280]">Preventivi gratuiti</p>
            </div>
          </div>
        </div>
        <div class="relative">
          <Image
            src={teamImg}
            alt="Team Infissi Paradise"
            class="rounded-lg shadow-xl w-full"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Sezione 3: Prodotti -->
  <section id="prodotti" class="py-24 fade-in">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12 text-[#DC2626]">
        I Nostri Prodotti
      </h2>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto"
      >
        <!-- Infissi PVC -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={pvcImg}
            alt="Infissi PVC"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Infissi in PVC</h3>
            <p class="text-[#374151] mb-4">
              Soluzioni moderne ed efficienti, isolamento termico superiore e
              bassa manutenzione.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Alta efficienza energetica</li>
              <li>• Materiali riciclabili</li>
              <li>• Manutenzione minima</li>
            </ul>
          </div>
        </div>

        <!-- Infissi Alluminio -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={aluImg}
            alt="Infissi Alluminio"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Infissi in Alluminio</h3>
            <p class="text-[#374151] mb-4">
              Design moderno e resistenza straordinaria, perfetti per
              architetture contemporanee.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Leggerezza e robustezza</li>
              <li>• Design minimalista</li>
              <li>• Resistenza alle intemperie</li>
            </ul>
          </div>
        </div>

        <!-- Grate Sicurezza -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={grateImg}
            alt="Grate Sicurezza"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Grate di Sicurezza</h3>
            <p class="text-[#374151] mb-4">
              Protezione massima senza sacrificare l'estetica, soluzioni
              antisollevamento certificate.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Massima protezione</li>
              <li>• Design personalizzabile</li>
              <li>• Certificazioni europee</li>
            </ul>
          </div>
        </div>

        <!-- Zanzariere -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={zanzariereImg}
            alt="Zanzariere"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Zanzariere</h3>
            <p class="text-[#374151] mb-4">
              Soluzioni pratiche ed efficaci contro insetti, disponibili in
              diverse configurazioni.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Protezione totale</li>
              <li>• Meccanismi scorrevoli</li>
              <li>• Installazione a incasso</li>
            </ul>
          </div>
        </div>

        <!-- Tende da Sole -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={tendeImg}
            alt="Tende da Sole"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Tende da Sole</h3>
            <p class="text-[#374151] mb-4">
              Protezione solare efficiente e design elegante per terrazze e
              finestre.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Tessuti tecnici premium</li>
              <li>• Automazione disponibile</li>
              <li>• Design personalizzabile</li>
            </ul>
          </div>
        </div>

        <!-- Porte Blindate -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={porteImg}
            alt="Porte Blindate"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Porte Blindate</h3>
            <p class="text-[#374151] mb-4">
              Sicurezza certificata con design moderno, protezione per la tua
              famiglia.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Certificazioni antieffrazione</li>
              <li>• Isolamento termico</li>
              <li>• Design personalizzato</li>
            </ul>
          </div>
        </div>

        <!-- Avvolgibili -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={avvolgibiliImg}
            alt="Avvolgibili"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Avvolgibili</h3>
            <p class="text-[#374151] mb-4">
              Automazione e comfort per la tua casa, disponibili in PVC e
              alluminio coibentato.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Coibentazione termica</li>
              <li>• Motorizzazione</li>
              <li>• Ampia scelta colori</li>
            </ul>
          </div>
        </div>

        <!-- Cambio Serrature -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={serratureImg}
            alt="Cambio Serrature"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Cambio Serrature</h3>
            <p class="text-[#374151] mb-4">
              Aggiorna la tua sicurezza con cilindri europei di ultima
              generazione.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Cilindri europei</li>
              <li>• Chiavi protette</li>
              <li>• Pronto intervento</li>
            </ul>
          </div>
        </div>

        <!-- Mobili in Alluminio -->
        <div
          class="product-card bg-white rounded-lg shadow-lg overflow-hidden border-2 border-transparent"
        >
          <Image
            src={mobiliAluImg}
            alt="Mobili in Alluminio"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Mobili in Alluminio</h3>
            <p class="text-[#374151] mb-4">
              Soluzioni resistenti e su misura per esterni, balconi e terrazzi.
            </p>
            <ul class="text-sm text-[#6B7280] space-y-1">
              <li>• Su misura</li>
              <li>• Resistenza totale</li>
              <li>• Zero manutenzione</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sezione 4: Galleria -->
  <section id="galleria" class="py-24 bg-[#F9FAFB] fade-in">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12 text-[#DC2626]">
        Nostri Lavori
      </h2>

      <div
        class="columns-1 md:columns-2 lg:columns-3 gap-4 space-y-4 max-w-6xl mx-auto"
      >
        {
          galleryImages.map((img, index) => (
            <div class="cursor-pointer overflow-hidden rounded-lg shadow-md mb-4 group">
              <Image
                src={img}
                alt={`Lavoro ${index + 1}`}
                class="w-full h-auto transition-transform duration-300 group-hover:scale-105 gallery-image"
                data-full-src={img.src}
              />
            </div>
          ))
        }
      </div>

      <!-- Lightbox -->
      <div
        id="lightbox"
        class="fixed inset-0 z-50 bg-black/90 hidden items-center justify-center opacity-0 transition-opacity duration-300"
      >
        <button
          id="lightbox-close"
          class="absolute top-4 right-4 text-white text-4xl font-bold hover:text-red-500 transition-colors"
          >&times;</button
        >
        <img
          id="lightbox-img"
          src=""
          alt="Ingrandimento"
          class="max-h-[90vh] max-w-[90vw] object-contain rounded-md shadow-2xl transform scale-95 transition-transform duration-300"
        />
      </div>

      <div class="flex flex-wrap justify-center gap-4 mt-12">
        <a
          href="https://www.instagram.com/infissiparadise/?hl=en"
          target="_blank"
          class="inline-flex items-center bg-[#DC2626] hover:bg-red-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm4.965-10.405a1.44 1.44 0 1 1 2.881.001 1.44 1.44 0 0 1-2.881-.001z"
            ></path>
          </svg>
          Seguici su Instagram
        </a>

        <a
          href="https://www.facebook.com/InfissiParadise/"
          target="_blank"
          class="inline-flex items-center bg-[#DC2626] hover:bg-red-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
            ></path>
          </svg>
          Seguici su Facebook
        </a>
      </div>
    </div>
  </section>

  <!-- Sezione 5: Ecobonus -->
  <section id="ecobonus" class="py-24 fade-in">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12 text-[#DC2626]">
        Ecobonus e Detrazioni
      </h2>
      <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-xl p-8">
        <h3 class="text-2xl font-semibold mb-6 text-center">
          Detrazioni Fiscali ed Ecobonus Disponibili
        </h3>

        <div class="grid md:grid-cols-2 gap-8 mb-8">
          <div class="bg-[#F9FAFB] rounded-lg p-6">
            <h4 class="text-xl font-semibold mb-3 text-[#DC2626]">
              Ecobonus 65%
            </h4>
            <p class="text-[#374151] mb-3">
              Detrazione per miglioramenti energetici degli edifici:
            </p>
            <ul class="text-sm text-[#6B7280] space-y-2">
              <li>
                ✓ Sostituzione infissi con performance energetiche superiori
              </li>
              <li>✓ Riduzione dei consumi energetici</li>
              <li>✓ Durata detrazione: 10 anni</li>
              <li>✓ Limite massimo spesa: €60.000 per unità immobiliare</li>
            </ul>
          </div>

          <div class="bg-[#F9FAFB] rounded-lg p-6">
            <h4 class="text-xl font-semibold mb-3 text-[#DC2626]">
              Bonus Ristrutturazione 50%
            </h4>
            <p class="text-[#374151] mb-3">
              Detrazione per manutenzione straordinaria:
            </p>
            <ul class="text-sm text-[#6B7280] space-y-2">
              <li>✓ Sostituzione porte interne ed esterne</li>
              <li>✓ Installazione grate di sicurezza</li>
              <li>✓ Durata detrazione: 10 anni</li>
              <li>✓ Limite massimo spesa: €96.000 per unità immobiliare</li>
            </ul>
          </div>
        </div>

        <div class="bg-red-50 rounded-lg p-6 text-center">
          <p class="text-[#374151] mb-4">
            <strong
              >Infissi Paradise ti assiste nell'iter burocratico completo!</strong
            ><br />
            Ci occupiamo di tutta la documentazione necessaria per accedere alle detrazioni.
          </p>
          <a
            href="#contatti"
            class="inline-block bg-[#DC2626] hover:bg-red-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
          >
            Scopri Come Approfittarne
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Sezione Partners -->
  <section id="partners" class="py-24 fade-in">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12 text-[#DC2626]">
        I Nostri Partner
      </h2>
      <div
        class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center grayscale opacity-80 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
      >
        <Image
          src={rehauBox}
          alt="Rehau"
          class="h-16 object-contain"
          width={200}
        />
        <Image
          src={domalBox}
          alt="Domal"
          class="h-16 object-contain"
          width={200}
        />
        <Image
          src={nurithBox}
          alt="Nurith"
          class="h-16 object-contain"
          width={200}
        />
        <Image
          src={finstralBox}
          alt="Finstral"
          class="h-16 object-contain"
          width={200}
        />
        <Image
          src={evvaBox}
          alt="Evva"
          class="h-16 object-contain"
          width={200}
        />
        <Image
          src={motturaBox}
          alt="Mottura"
          class="h-16 object-contain"
          width={200}
        />
        <Image
          src={tempotestBox}
          alt="Tempotest"
          class="h-16 object-contain"
          width={200}
        />
        <Image
          src={geniusBox}
          alt="Genius Zanzariere"
          class="h-16 object-contain"
          width={200}
        />
      </div>
    </div>
  </section>

  <!-- Sezione 6: Mappa -->
  <section id="mappa" class="py-24 bg-[#F9FAFB] fade-in">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12 text-[#DC2626]">
        Dove Siamo
      </h2>
      <div class="max-w-4xl mx-auto">
        <div class="relative rounded-lg overflow-hidden shadow-xl">
          <iframe
            title="Mappa della sede di Infissi Paradise"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2936.129793172!2d12.4964!3d41.9028!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDHCsDU0JzEwLjEiTiAxMsKwMjknNDcuMCJF!5e0!3m2!1sen!2sit!4v1234567890"
            width="100%"
            height="400"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full"></iframe>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6 mt-6 text-center">
          <div class="flex items-center justify-center mb-3">
            <div class="w-4 h-4 bg-[#DC2626] rounded-full mr-3"></div>
            <h3 class="text-xl font-semibold">Infissi Paradise</h3>
          </div>
          <p class="text-[#374151] mb-2">Via Roma, 123 - 00100 Roma, Italia</p>
          <p class="text-[#6B7280] mb-4">
            <strong>Orari:</strong> Lun-Ven 9:00-18:00 | Sab 9:00-13:00
          </p>
          <p class="text-sm text-[#6B7280]">
            Siamo facilmente raggiungibili e disponiamo di ampio parcheggio per
            i clienti. Contattaci per un sopralluogo gratuito presso la tua
            abitazione.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Sezione 7: Contatti -->
  <section id="contatti" class="py-24 fade-in">
    <div class="container mx-auto px-4">
