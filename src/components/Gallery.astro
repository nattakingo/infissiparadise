---
import { Image } from "astro:assets";

// Import all gallery images
const galleryFiles = import.meta.glob(
    "../assets/gallery-*.{jpg,png,jpeg,webp}",
    { eager: true },
);
const galleryImages = Object.values(galleryFiles).map(
    (file: any) => file.default,
);

// Sort images significantly if needed (based on filename number)
// Assuming filenames are keep consistent: gallery-1.jpg, gallery-2.jpg etc.
galleryImages.sort((a, b) => {
    // Extract number from src path (e.g. /_astro/gallery-1.hash.jpg)
    // This might be tricky with hashed paths in production, but let's assume the import object keys
    // We should actually sort the keys of galleryFiles
    return 0; // Default sort for now, keys are sorted alphabetically usually
});

// Better sorting approach using keys
const sortedImages = Object.keys(galleryFiles)
    .sort((a, b) => {
        const numA = parseInt(a.match(/gallery-(\d+)/)?.[1] || "0");
        const numB = parseInt(b.match(/gallery-(\d+)/)?.[1] || "0");
        return numA - numB;
    })
    .map((key) => (galleryFiles[key] as any).default);
---

