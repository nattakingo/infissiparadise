---
import { Image } from "astro:assets";
import heroBg1 from "../assets/hero-bg.jpg";
import heroBg2 from "../assets/hero-bg2.jpg";
import heroBg3 from "../assets/hero-bg3.jpg";
import heroBg4 from "../assets/hero-bg4.jpg";

const images = [heroBg1, heroBg2, heroBg3, heroBg4];
---

<section
    class="relative h-screen flex items-center justify-center overflow-hidden"
>
    <!-- Background Slider -->
    <div class="absolute inset-0 z-0">
        <div class="slider-container w-full h-full relative">
            {
                images.map((img, index) => (
                    <div
                        class={`slide absolute inset-0 opacity-0 transition-opacity duration-1000 ease-in-out ${index === 0 ? "active" : ""}`}
                        data-index={index}
                    >
                        <Image
                            src={img}
                            alt={`Infissi Paradise ${index + 1}`}
                            class="w-full h-full object-cover"
                            loading={index === 0 ? "eager" : "lazy"}
                            fetchpriority={index === 0 ? "high" : "auto"}
                            decoding="async"
                            quality={60}
                            format="webp"
                        />
                    </div>
                ))
            }
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/40 to-black/60"
        >
        </div>
    </div>

    <!-- Content -->
    <div
        class="relative z-10 text-center text-white px-4 fade-in max-w-6xl mx-auto"
    >
        <h1
            class="text-6xl md:text-8xl lg:text-9xl font-black mb-6 leading-tight text-shadow-hero"
        >
            Infissi Paradise
        </h1>
        <p
            class="text-2xl md:text-4xl lg:text-5xl font-light mb-8 text-gray-100"
        >
            Porte e Finestre che arredano
        </p>
        <p
            class="text-lg md:text-xl lg:text-2xl mb-12 max-w-3xl mx-auto text-gray-200 leading-relaxed"
        >
            Specialisti nella vendita e installazione a Roma di infissi in
            alluminio e PVC, porte d'ingresso e zanzariere. Qualit√† garantita e
            assistenza professionale.
        </p>
        <a
            href="#prodotti"
            class="hero-button inline-block bg-[#339966] hover:bg-[#2d8659] text-white px-12 py-6 rounded-full text-lg md:text-xl font-bold transition-all transform hover:scale-105"
        >
            Scopri i Nostri Prodotti
        </a>
    </div>
</section>

<style>
    .slide.active {
        opacity: 1;
    }
</style>

<script>
    function setupSlider() {
        const slides = document.querySelectorAll(".slide");
        let currentSlide = 0;

        if (slides.length === 0) return;

        setInterval(() => {
            slides[currentSlide].classList.remove("active");
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add("active");
        }, 5000);
    }

    // Run on initial load
    setupSlider();

    // Run on view transition if using them
    document.addEventListener("astro:after-swap", setupSlider);
</script>
