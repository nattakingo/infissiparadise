---
import { Image } from "astro:assets";
import rehauBox from "../assets/partners/rehau.png";
import domalBox from "../assets/partners/domal.png";
import nurithBox from "../assets/partners/nurith.png";
import finstralBox from "../assets/partners/finstral.png";
import evvaBox from "../assets/partners/evva.png";
import motturaBox from "../assets/partners/mottura.png";
import tempotestBox from "../assets/partners/tempotest.png";
import geniusBox from "../assets/partners/genius.png";

const partners = [
    { img: rehauBox, alt: "Rehau" },
    { img: domalBox, alt: "Domal" },
    { img: nurithBox, alt: "Nurith" },
    { img: finstralBox, alt: "Finstral" },
    { img: evvaBox, alt: "Evva" },
    { img: motturaBox, alt: "Mottura" },
    { img: tempotestBox, alt: "Tempotest" },
    { img: geniusBox, alt: "Genius Zanzariere" },
];
---

<section id="partners" class="py-24 fade-in">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12 text-[#DC2626]">
            I Nostri Partner
        </h2>
        <div
            class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center grayscale opacity-80 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
        >
            {
                partners.map((partner) => (
                    <Image
                        src={partner.img}
                        alt={partner.alt}
                        class="h-16 object-contain"
                        width={200}
                    />
                ))
            }
        </div>
    </div>
</section>
